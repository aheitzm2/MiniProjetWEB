{% extends "base.html.twig" %}

{% block body %}
	<h1> Projet 2 web : site de vente Espace client </h1>
	<div class="row">
		<div class="col-7">
			les produits + liens
			<table class="table table-bordered">
				<thead>
				<tr><th>nom</th><th>stock</th><th>type</th><th>prix</th><th>photo</th><th>Ajouter</th>
				</tr>
				</thead>
				<tbody>
					{% for produit in produits if produits is not empty %}
						<tr>
							<td><a href="#">{{ produit.nom }}</a></td>
							<td>{{ produit.stock }}</td>
							<td>{{ produit.typeProduitId.getLibelle|default('Pas de type') }}</td>
							<td>{{ produit.prix }}</td>
							<td><img src="{{ produit.photo }}"></td>
							<td><a href="">+</a></td>
						</tr>
					{% else %}
						<tr>Pas de produits disponibles.</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-5">
			le panier +liens
			<table class="table table-bordered">
				<thead>
				<tr>
					<th>Nom du Produit</th><th>quantite</th><th>prix</th><th>prix total</th><th>Image</th><th>supprimer</th>
				</tr>
				</thead>
				<tbody>
					{% for produit in panier.produits if panier.produits is not empty %}
						<tr>
							<td>{{ produit.nom }}</td>
							<td>{{panier.quantite}}</td>
							<td>{{ produit.prix }}</td>
							<td>TODO</td>
							<td>TODO</td>
							<td><a href="#">Supprimer</a></td>
						</tr>
					{% else %}
						<tr><td colspan="6">Pas d'élément dans le panier!</td></tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}







